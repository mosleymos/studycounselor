<%= render partial: "schools/presentation/school_header", locals:{ school: @school, description: @school.moto}%>
<% school_presenter = SchoolPresenter.new(@school, self) %>
<div class="container sections-wrapper">
	<div class="row">
		<div class="primary col-md-8 col-sm-12 col-xs-12">
			<section class="about section">
				<div class="section-inner">
					<h2 class="heading">Description</h2>
					<div class="content">
						<%= @school.description.to_s.html_safe%>
					</div><!--//content-->
				</div><!--//section-inner-->
			</section><!--//section-->

			<section class="latest section">
				<div class="section-inner">
					<h2 class="heading">Les programmes proposés</h2>
					<div class="content">

						
						<div class="row">
						<% @school.programs.each do |program| %>
						
							
							<div class="col-md-12 col-sm-12 col-xs-12">
								<h3 class="title"><a href="<%= program_path(program) %>" target="_blank"><%= program.name %></a></h3>
								<p>
									<%= program.description.to_s.html_safe %>
								</p>

							</div><!--//desc-->
						
						<% end %>
						</div>

					</div><!--//content-->
				</div><!--//section-inner-->
			</section><!--//section-->

			<section class="experience section">
				<div class="section-inner">
					<h2 class="heading">Les conseillers susceptibles de vous éclairer</h2>
					<div class="content">

					</div><!--//content-->
				</div><!--//section-inner-->
			</section><!--//section-->

			<section class="experience section">
				<div class="section-inner">
					<h2 class="heading">Les débouchés de l'Ecole</h2>
					<div class="content">
						<div class="item">
							<h3 class="title">Co-Founder & Lead Developer - <span class="place"><a href="#">Startup Hub</a></span><span class="year">(2014 - Present)</span></h3>
							<p>
								Aenean leo ligula, porttitor eu, consequat vitae, eleifend ac, enim. Aliquam lorem ante, dapibus in, viverra quis, feugiat a, tellus. Phasellus viverra nulla ut metus varius laoreet. Donec vitae sapien ut libero venenatis faucibus. Nullam quis ante. Etiam sit amet orci eget eros faucibus tincidunt.
							</p>
						</div><!--//item-->
						<div class="item">
							<h3 class="title">Software Engineer - <span class="place"><a href="#">Google</a></span><span class="year">(2013 - 2014)</span></h3>
							<p>
								Vivamus a tortor eu turpis pharetra consequat quis non metus. Aliquam aliquam, orci eu suscipit pellentesque, mauris dui tincidunt enim. Sed fringilla mauris sit amet nibh. Donec sodales sagittis magna.
							</p>
						</div><!--//item-->

						<div class="item">
							<h3 class="title">Software Engineer - <span class="place"><a href="#">eBay</a></span><span class="year">(2012 - 2013)</span></h3>
							<p>
								Maecenas tempus, tellus eget condimentum rhoncus, sem quam semper libero, sit amet adipiscing sem neque sed ipsum.
							</p>
						</div><!--//item-->

					</div><!--//content-->
				</div><!--//section-inner-->
			</section><!--//section-->

		</div><!--//primary-->
		<div class="secondary col-md-4 col-sm-12 col-xs-12">
			<aside class="info aside section">
				<div class="section-inner">
					<h2 class="heading sr-only">Basic Information</h2>
					<div class="content">
						<ul class="list-unstyled">
							<li>
								<i class="fa fa-map-marker"></i><span class="sr-only">Location:</span><%= @school.address %>
							</li>
							<li>
								<i class="fa fa-envelope-o"></i><span class="sr-only">Email:</span><%= school_presenter.contact_mail %>
							</li>
							<li>
								<i class="fa fa-link"></i><span class="sr-only">Email:</span><a href="<%= @school.school_url %>"><%= @school.school_url %></a>
							</li>

						</ul>
					</div><!--//content-->
				</div><!--//section-inner-->
			</aside><!--//aside-->

			<aside class="skills aside section">
				<div class="section-inner">
					<h2 class="heading">Domaines d'éducation</h2>
					<div class="content">
						<p class="intro">
							Les catégories associées à l'école
						</p>
						<div class="skillset">

							<div class="item">
								<h3 class="level-title">Python &amp; Django<span class="level-label" data-toggle="tooltip" data-placement="left" data-animation="true" title="You can use the tooltip to add more info...">Expert</span></h3>
								<div class="level-bar">
									<div class="level-bar-inner" data-level="96%"></div>
								</div><!--//level-bar-->
							</div><!--//item-->

							<div class="item">
								<h3 class="level-title">Javascript &amp; jQuery<span class="level-label">Expert</span></h3>
								<div class="level-bar">
									<div class="level-bar-inner" data-level="96%"></div>
								</div><!--//level-bar-->
							</div><!--//item-->

							<div class="item">
								<h3 class="level-title">HTML5, CSS3, SASS &amp; LESS<span class="level-label">Expert</span></h3>
								<div class="level-bar">
									<div class="level-bar-inner" data-level="96%"></div>
								</div><!--//level-bar-->
							</div><!--//item-->

							<div class="item">
								<h3 class="level-title">Ruby on Rails<span class="level-label">Pro</span></h3>
								<div class="level-bar">
									<div class="level-bar-inner" data-level="85%"></div>
								</div><!--//level-bar-->
							</div><!--//item-->

							<p>
								<a class="more-link" href="#"><i class="fa fa-external-link"></i> More on Coderwall</a>
							</p>
						</div>
					</div><!--//content-->
				</div><!--//section-inner-->
			</aside><!--//section-->

			<aside class="skills aside section">
				<div class="section-inner">
					<h2 class="heading">Classements de l'Ecole</h2>
					<div class="content">

						<div class="skillset">

							<div class="item">
								<h3 class="level-title">Times<span class="level-label" data-toggle="tooltip" data-placement="left" data-animation="true" title="You can use the tooltip to add more info...">16</span></h3>

							</div><!--//item-->

							<div class="item">
								<h3 class="level-title">Figaro<span class="level-label">6</span></h3>

							</div><!--//item-->

							<div class="item">
								<h3 class="level-title">Challenges<span class="level-label">8</span></h3>

							</div><!--//item-->

							<p>
								<a class="more-link" href="#"><i class="fa fa-external-link"></i> Tous les classements</a>
							</p>
						</div>
					</div><!--//content-->
				</div><!--//section-inner-->
			</aside><!--//section-->

			<aside class="testimonials aside section">
				<div class="section-inner">
					<h2 class="heading">Les commentaires sur l'Ecole</h2>
					<div class="content">
						<div class="item">
							<blockquote class="quote">
								<p>
									<i class="fa fa-quote-left"></i>James is an excellent software engineer and he is passionate about what he does. You can totally count on him to deliver your projects!
								</p>
							</blockquote>
							<p class="source">
								<span class="name">Tim Adams</span>
								<br />
								<span class="title">Curabitur commodo</span>
							</p>
						</div><!--//item-->

						<p>
							<a class="more-link" href="#"><i class="fa fa-external-link"></i> More on Linkedin</a>
						</p>

					</div><!--//content-->
				</div><!--//section-inner-->
			</aside><!--//section-->

			<aside class="blog aside section">
				<div class="section-inner">
					<h2 class="heading">Statistiques sur l'Ecole</h2>
					<p>
						<%= @school.statistics_text.to_s.html_safe %>
					</p>
				</div><!--//section-inner-->
			</aside><!--//section-->
			
			<aside class="blog aside section">
				<div class="section-inner">
					<h2 class="heading">Tags associés</h2>
					<% @school.tags.each do |tag|%>
					<p><%= link_to tag.name, tag%></p>
					<% end %>
				</div><!--//section-inner-->
			</aside><!--//section-->

		</div><!--//secondary-->
	</div><!--//row-->
</div><!--//masonry-->

<div class="container sections-wrapper">
	<div class="row">
		<div class="primary col-md-12 col-sm-12 col-xs-12">
			<hr />
			<% if current_administrator %>
			<%= link_to "Programmes de l'Ecole", programs_school_path(@school), class: "btn btn-info"%>
			<%= link_to "Créer un nouveau programme pour cette école", program_edit_school_path(@school), :class => "btn btn-success"%>
			<% end %>

			<%= link_to 'Modifier', edit_school_path(@school), class: "btn btn-warning" %>
			<%= link_to 'Liste des Ecoles', schools_path, class: "btn btn-default" %>
		</div>
	</div>
</div>

