<%= form_for(@counselor) do |f| %>
<% if @counselor.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@counselor.errors.count, "error") %> prohibited this counselor from being saved:</h2>

	<ul>
		<% @counselor.errors.full_messages.each do |message| %>
		<li>
			<%= message %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>

<section class="about section">
	<div class="section-inner">

		<h2 class="page-header"> Information basiques</h2>
		<div class="form-group">
			<%= f.label :first_name, "Prénom" %>
			<br>
			<%= f.text_field :first_name, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :last_name, "Nom de famille" %>
			<br>
			<%= f.text_field :last_name, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :birthdate, "Date de naissance" %>
			<br>
			<%= f.date_select :birthdate, class: "form-control", start_year: 1980, end_year: 1995 %>
		</div>
		<div class="form-group">
			<%= f.label :email, "Email" %>
			<br>
			<%= f.text_field :email, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :telephone, "Téléphone" %>
			<br>
			<%= f.text_field :telephone, class: "form-control" %>
		</div>


		<div class="form-group">

			<h5>Vos disponibilités:</h5>
						<%= f.label :lundi %>	
					    <%= $HOURS.each do |hour| %>
											<%= check_box_tag 'lundi[]', hour %>
							<% end %>
						<br>

						<%= f.label :mardi %>	
					    <%= $HOURS.each do |hour| %>
											<%= check_box_tag 'mardi[]', hour %>
							<% end %>
						<br>
						<%= f.label :mercredi %>	
					    <%= $HOURS.each do |hour| %>
											<%= check_box_tag 'mercredi[]', hour %>
							<% end %>
						<br>
						<%= f.label :jeudi %>	
					    <%= $HOURS.each do |hour| %>
											<%= check_box_tag 'jeudi[]', hour %>
							<% end %>
						<br>

						<%= f.label :vendredi %>	
					    <%= $HOURS.each do |hour| %>
											<%= check_box_tag 'vendredi[]', hour %>
							<% end %>
						<br>
						<%= f.label :samedi %>	
					    <%= $HOURS.each do |hour| %>
											<%= check_box_tag 'samedi[]', hour %>
							<% end %>
						<br>

						<%= f.label :dimanche %>	
					    <%= $HOURS.each do |hour| %>
											<%= check_box_tag 'dimanche[]', hour %>
							<% end %>
						<br>
	
		</div>
		
		<div class="form-group">
			<%= f.label :moto, "VOtre devise" %>
			<br>
			<%= f.text_field :moto, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :study_domain, "Domaine d'étude" %>
			<br>
			<%= f.text_field :study_domain, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :high_school, "Nom du Lycée" %>
			<br>
			<%= f.text_field :high_school, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :looking_job, "Postes visés" %>
			<br>
			<%= f.text_field :looking_job, class: "form-control" %>
		</div>

		<div class="form-group">
						<%= f.label :bac_type, "Bac" %>
						<br>
						<%= f.select :bac_type,["L","ES", "S", "SMTG", "Pro", "Autres"] , :class => "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label :bac_mention, "Mention au bac" %>
			<br>
			<%= f.select :bac_mention,["Non","AB", "B", "TB"] , :class => "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :study_level, "Niveau d'études" %>
			<br>
			<%= f.select :study_level,["Bac","Bac+1", "Bac+2", "Bac+3", "Bac+4", "Bac+5"] , :class => "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :study_financing, "Financement" %>
			<br>
			<%= f.text_field :study_financing, class: "form-control" %>
		</div>
		
	

		<div class="form-group">
			<%= f.label :image_url, "Photo du conseiller" %>
			<br>
			<%= f.file_field :image_url, class: "form-control"  %>

		</div>
		<div class="form-group">
			<%= f.label :address, "Votre adresse:" %>
			<br>
			<%= f.text_area :address, class: "form-control" %>
		</div>

	</div>
</section>

