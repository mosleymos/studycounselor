			<%= f.label :facebook_url, "Url Facebook" %>
			<br>
			<%= f.text_field :facebook_url, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :twitter_url, "Url Twitter" %>
			<br>
			<%= f.text_field :twitter_url, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :linkedin_url, "Url Linkedin" %>
			<br>
			<%= f.text_field :linkedin_url, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :google_plus_url, "Url Google +" %>
			<br>
			<%= f.text_field :google_plus_url, class: "form-control" %>
