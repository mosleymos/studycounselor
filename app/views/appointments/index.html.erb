<%# render partial: "counselors/presentation/counselor_header", locals:{counselor: @counselor, description: "Tous les rendez-vous du conseiller" } %>
<div class="container sections-wrapper">
	<div class="row">
		<div class="primary col-md-12 col-sm-12 col-xs-12">
			<table class="table">
				<thead>
					<tr>
						<th>Student</th>
						<th>Counselor</th>
						<th>Telephone</th>
						<th>Date</th>
						<th>Comment</th>
						<th colspan="3"></th>
					</tr>
				</thead>

				<tbody>
					<% @appointments.each do |appointment| %>
					<tr>
						<td><%= appointment.student %></td>
						<td><%= appointment.counselor %></td>
						<td><%= appointment.telephone %></td>
						<td><%= appointment.date %></td>
						<td><%= appointment.comment %></td>
						<td><%= link_to 'Show', counselor_appointment_path(appointment.counselor, appointment) %></td>
						<td><%= link_to 'Edit', edit_counselor_appointment_path(appointment.counselor, appointment) %></td>
						<td><%= link_to 'Destroy', [appointment.counselor, appointment] , method: :delete, data: { confirm: 'Are you sure?' } %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>

<br>

<%= link_to 'New Appointment', new_counselor_appointment_path(@counselor) %>
