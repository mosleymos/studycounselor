<!DOCTYPE html>
<html itemscope itemtype="http://schema.org/WebPage">
	<head>
		<%= render partial: 'layouts/meta_common' %>
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		<%= csrf_meta_tags %>
	</head>
	<body>

		<%= render partial: 'layouts/navbar' %>

		<div class="container-fluid main-container">
			<div class="row">
				<div class="col-md-12">
					<a href="javascript:" id="return-to-top" title="Return to top button"><i class="fa fa-arrow-up"></i></a>
					<div class="container-fluid">
						<% flash.each do |key, value| %>
						<div class="alert alert-warning text-center">
							<strong><%= value %></strong>
						</div>
						<% end %>

					</div>

				</div>

				<div class="row">
					<div class="col-sm-3 col-md-2 sidebar">
						<%= render partial: "layouts/administration/sidebar" %>
					</div>
					<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
						<%= yield %>
					</div>

				</div>

			</div>
		</div>

		<div class="modal fade" id="layout-modal">
			<div class="modal-dialog">
				<div class="modal-content">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal">
							x
						</button>
						<h4 class="modal-title green"></h4>
					</div>
					<div class="modal-body"></div>
					<div class="modal-footer">
						<button class="btn btn-danger" data-dismiss="modal">
							<%= t('modal_close') %>
						</button>
					</div>
				</div>
			</div>
		</div>

		<%= render partial: 'layouts/end_scripts' %>

	</body>
</html>
