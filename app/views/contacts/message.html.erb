<div class="row">
				<div class="container">

								<div class="row">
												<div class="col-md-12">
					
												<div class="post-heading-center">
												<h2>CONTACTEZ-NOUS</h2>
												<p>Une question, une remarque, une suggestion ?</p>

												</div>
											
											
								</div>
								</div>
								<div class="form-group">
								
								</div>
								<%= form_tag 'send_message', :method => :post, :multipart => true , :class => 'form-group' do  %>
												<div class="input-group">
																<%= label_tag 'name' %>
																<%= text_field_tag 'name'  %>
												</div>
												<div class="input-group">
																<%= label_tag 'email' %>
																<%= text_field_tag 'email'  %>
												</div>
												<div class="input-group">
																<%= label_tag 'message' %>
																<%= text_area_tag 'message'  %>
												</div>
												<div class="input-group">
																<%= submit_tag 'send message' %>
												</div>

								<% end %>

								<br>

				</div>

</div>

